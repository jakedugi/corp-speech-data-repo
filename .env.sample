# =============================================================================
# ENVIRONMENT VARIABLES FOR CORPORATE SPEECH DATA PIPELINE
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control
# =============================================================================

# =============================================================================
# API CONFIGURATION
# =============================================================================

# CourtListener API Key (required for live data fetching)
# Get from: https://www.courtlistener.com/api/
HYDRATOR_API_KEY=your_courtlistener_api_key_here

# API Request Configuration
REQUESTS_TIMEOUT=30
MAX_RETRIES=3
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log Format (json, text)
LOG_FORMAT=text

# Enable structured logging
LOG_STRUCTURED=false

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================

# Batch processing size
BATCH_SIZE=100

# Maximum number of worker processes
MAX_WORKERS=4

# Memory limit (MB)
MEMORY_LIMIT_MB=2048

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Use fixtures instead of live APIs (recommended for development)
USE_FIXTURES=true

# Skip expensive ML operations during development
SKIP_ML_INFERENCE=false

# Enable debug mode
DEBUG_MODE=false
